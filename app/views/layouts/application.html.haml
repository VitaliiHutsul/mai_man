      @media only screen and (max-width: 640px) { @keyframes OpeningSequence {0%{text-shadow: 0 0 40px #fff;letter-spacing: 40px;opacity: 0.2;-webkit-transform: rotateY(-90deg);transform: rotateY(-90deg);}50% {text-shadow: 0 0 1px #fff;letter-spacing: 30px;opacity: 0.8;-webkit-transform: rotateY(0);transform: rotateY(0);}75% {text-shadow: 0 0 1px #fff;opacity: 0.8;-webkit-transform: rotateY(0) translateZ(100px);transform: rotateY(0) translateZ(100px);}100% {text-shadow: 0 0 10px #fff;opacity: 0;-webkit-transform: translateZ(130px);transform: translateZ(130px);pointer-events: none;}}}
