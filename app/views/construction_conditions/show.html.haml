- content_for :body_class, "news-open-page constructions-conditions-open-page"
- content_for :title, "#{@construction_condition.title} - #{t('title.construction_condition')}"
- content_for :desc, t('desc.construction_condition')
- content_for :keywords, t('keywords.construction_condition')
- breadcrumb :construction_condition_item, @construction_condition

= render partial: 'partials/header'

.news-open__container
  .section-content
    .flex-block.half-width.first
      .news-open__photos>
        - if @construction_condition.construction_condition_photos.present?
          .swiper-container.gallery-top.js-gallery-top
            .swiper-wrapper
              - @construction_condition.construction_condition_photos.each do |construction_condition_photo|
                .swiper-slide
                  =image_tag construction_condition_photo.photo.url, alt: '#'
            .swiper-button-next.swiper-button-white
            .swiper-button-prev.swiper-button-white
          .swiper-container.gallery-thumbs.js-gallery-thumbs
            .swiper-wrapper
              - @construction_condition.construction_condition_photos.each do |construction_condition_photo|
                .swiper-slide
                  =image_tag construction_condition_photo.photo.thumb.url, alt: '#'

    .flex-block.half-width.second
      %p.date= @construction_condition.date.strftime('%d.%m.%Y')
      .news-open__text>
        .text-container
          %h6= @construction_condition.title
          = raw @construction_condition.body


= render partial: 'partials/footer'
